<!-- Validation failure messages -->
<% if @packing_list.present? %>
  <% if @packing_list.errors.any? %>
    <% @packing_list.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new packing list
</h1>


<hr>

<form action="/create_packing_list" method="post">

  <div class="form-group">
    <label for="item">
      Item
    </label>

    <input type="text" id="item" name="item" class="form-control" value="<%= @packing_list.item %>">
  </div>

  <div class="form-group">
    <label for="quantity">
      Quantity
    </label>

    <input type="text" id="quantity" name="quantity" class="form-control" value="<%= @packing_list.quantity %>">
  </div>

  <div class="form-group">
    <label for="trip_id">
      Trip
    </label>

    <input type="text" id="trip_id" name="trip_id" class="form-control" value="<%= @packing_list.trip_id %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create packing list
  </button>
</form>

<hr>

<a href="/packing_lists">
  Go back
</a>
