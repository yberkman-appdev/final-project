<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All packing lists
    </h1>

    <a href="/packing_lists/new" class="btn btn-block btn-outline-secondary">
      Add a new packing list
    </a>
  </div>
</div>


<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Item
        </th>

        <th>
          Quantity
        </th>

        <th>
          Trip
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @packing_lists.each do |packing_list| %>
      <tr>
        <td>
          <%= packing_list.id %>
        </td>

        <td>
          <%= packing_list.item %>
        </td>

        <td>
          <%= packing_list.quantity %>
        </td>

        <td>
          <%= packing_list.trip_id %>
        </td>

        <td>
          <%= time_ago_in_words(packing_list.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(packing_list.updated_at) %> ago
        </td>

        <td>
          <a href="/packing_lists/<%= packing_list.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
