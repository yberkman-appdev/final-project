<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Packing list #<%= @packing_list.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/packing_lists" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/packing_lists/<%= @packing_list.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit packing list
        </a>
      </div>

      <div class="col">
        <a href="/delete_packing_list/<%= @packing_list.id %>" class="btn btn-block btn-outline-secondary">
          Delete packing list
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Item
      </dt>
      <dd>
        <%= @packing_list.item %>
      </dd>

      <dt>
        Quantity
      </dt>
      <dd>
        <%= @packing_list.quantity %>
      </dd>

      <dt>
        Trip
      </dt>
      <dd>
        <%= @packing_list.trip_id %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@packing_list.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@packing_list.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

